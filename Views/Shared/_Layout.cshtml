<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/font-awesome.css" rel="stylesheet" />
    <script src="https://unpkg.com/vue@3/dist/vue.global.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <style>
        .frame_footer {
            height: 230px;
            display: flex;
            justify-content: space-between;
            font-size: 15px;
        }

            .frame_footer .logo {
                margin-left: 20px;
                width: 30%;
                margin-top: 35px;
            }

            .frame_footer .address {
                margin-top: 35px;
                margin-left: -20px;
            }

            .frame_footer .support1 {
                margin-top: 35px;
                font-size: 15px;
            }

            .frame_footer .support2 {
                margin-top: 35px;
                font-size: 15px;
                margin-right: 20px;
            }

        input {
            border: none;
            outline: none;
            border-radius: 15px;
            padding-left: 4px;
            margin-right: 6px;
        }

        .home_page > div {
            width: 90%;
            margin-left: 5%;
        }

        .banner img {
            height: 400px;
            width: 100%;
        }

        img {
            transition: ease .4s;
        }

        .scale_img img:hover {
            transform: scale(1.1);
            cursor: pointer;
        }

        .auto_wrap {
            display: flex;
            flex-wrap: wrap;
        }

        a {
            text-decoration: none;
            color: black;
            font-weight: 600;
        }
    </style>
</head>
<body>
    @{
        var user = Session["User"] as WebApplication4.Models.Account;

    }
    <div class="container-fluid bg-dark-subtle fixed-top" style="height: 100px; color: white">
        <header class="row h-100">
            <div class="col-md-1"></div>
            <div class="col-md-1 my-auto">
                @Html.ActionLink("Trang Chủ", "Index", "Home")
            </div>
            <div class="col-md-1 my-auto">
                @Html.ActionLink("Sản phẩm", "Index", "Product")
            </div>
            <div class="col-md-1 my-auto">
                @Html.ActionLink("Tin tức", "Index", "News")
            </div>
            <div class="col-md-1 my-auto">
                @Html.ActionLink("Giới thiệu", "Index", "Info")
            </div>
            <div class="col-md-4 my-auto">
                <div style="margin-top: 10px; margin-left: 100px" class="">
                    <form method="post" action="/Product/Index">
                        <input name="search" style="height: 30px; width: 240px" type="search" placeholder="Tìm kiếm sản phẩm!" />
                        <button style="border: none; border-radius: 5px" type="submit" class="bg-gradient">Tìm kiếm</button>
                    </form>
                </div>
            </div>
            <div class="col-md-2 my-auto d-flex text-black" style="font-size: 17px; font-weight: 600">
                @if (user != null)
                {
                    <a href="/Account/UpdateInfo/@user.id_account"><p class="my-auto">@user.HoTen</p></a><a href="/Account/Remove_Session"><i style="font-size: 28px" class="fa fa-sign-in my-auto mx-2"></i></a>
                }
                else
                {
                    <a class="my-auto" href="/Account/Login_Account"><i style="font-size: 28px" class="fa fa-user text-black-50"></i> Đăng nhập</a>
                }
            </div>
            <div class="col-md-1 my-auto d-flex">
                <a href="/Cart/Index"><i style="font-size: 25px" class="fa fa-shopping-cart"></i></a>
                <span style="font-size: 10px; height: 18px;" class="badge bg-danger mx-1">
                    @if (Session["ProductCart"] != null)
                    {
                        <i>@Session["ProductCart"]</i>
                    }
                    else
                    {
                        <i>0</i>
                    }
                </span>
            </div>
        </header>
    </div>
    <div style="margin-top: 120px" class="container-fluid body-content">
        @RenderBody()
        <hr />
    </div>
    <footer class="frame_footer bg-dark-subtle text-black">
        <div class="logo">
            <div class="name">
                <h1>SweetLemon</h1>
                <div style="font-size: 22px;margin-top: 30px;">Trang web bán điện thoại uy tín, chất lượng</div>
                <div style="font-size: 22px;margin-top: 5px;">hàng đầu Việt Nam</div>
            </div>
        </div>
        <div style="border: 1px solid grey; height: 90%;margin-top: 10px;margin-left: -70px;"></div>
        <div class="address">
            <div style="font-size: 20px;margin-bottom: 20px;">Bạn cần hỗ trợ</div>
            <h2>1800 1009</h2>
            <div style="font-size: 17px;margin-top: 20px;"><i>Địa chỉ: Số 298 đường Cầu Diễn, quận Bắc Từ Liêm, thành phố Hà Nội</i></div>
            <div style="font-size: 17px;margin-top: 8px;"><i>Email: support@gmail.com</i></div>
            <div class="icon_x" style="margin-top: 10px;width: 150px;display: flex;justify-content: space-between;">
                <i class="fa fa-facebook"></i>
                <i class="fa fa-youtube-play"></i>
                <i class="fa fa-google"></i>
                <i class="fa fa-github-alt"></i>
            </div>
        </div>
        <div class="support1">
            <div style="font-size: 20px; margin-bottom: 10px;">Hỗ trợ mua hàng</div>
            <div style="margin-top: 8px;">Trang chủ</div>
            <div style="margin-top: 8px;">Danh mục</div>
            <div style="margin-top: 8px;">Tìm kiếm</div>
            <div style="margin-top: 8px;">Đăng nhập</div>
            <div style="margin-top: 8px;">Hướng dẫn sử dụng</div>
        </div>
        <div class="support2">
            <div style="font-size: 20px; margin-bottom: 10px;">Hỗ trợ khách hàng</div>
            <div style="margin-top: 8px;">Trang chủ</div>
            <div style="margin-top: 8px;">Danh mục</div>
            <div style="margin-top: 8px;">Tìm kiếm</div>
            <div style="margin-top: 8px;">Đăng nhập</div>
            <div style="margin-top: 8px;">Hướng dẫn sử dụng</div>
        </div>
    </footer>


    <script src="~/Content/plugin/ckfinder/ckfinder.js"></script>
    <script src="~/Content/plugin/ckeditor/ckeditor.js"></script>

    @RenderSection("scripts", required: false)


</body>
</html>
