
@{
    ViewBag.Title = "Home Page";
    var list = (List<WebApplication4.Models.SanPham>)ViewBag.ds_giamgia;
    var list1 = list.Take(6).ToList();
    var list2 = list.Skip(6).Take(6).ToList();
}

<div class="col-lg-12 home_page" id="home">
    <div class="banner carousel" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/image/banner1.png" alt="" class="d-block" style="width:100%">
            </div>
            <div class="carousel-item">
                <img src="~/image/banner2.png" alt="" class="d-block" style="width:100%">
            </div>
            <div class="carousel-item">
                <img src="~/image/banner3.png" alt="" class="d-block" style="width:100%">
            </div>
        </div>
    </div>



    <div style="margin-top: 40px">
        <div>
            <h1 style="font-size: 45px; color: red">Siêu giảm giá</h1>
        </div>
        <hr />
        <div class="auto_wrap" v-show="display1" style="width: 100%">
            @foreach (var item in list1)
            {
                <div style="width: 15.7%">
                    <div class="card scale_img" style="border: none">
                        <a href="/DetailProduct/Index/@item.id_sanpham"><img style="height: 200px" class="card-img-top" src="~/image/@item.Avatar" /></a>
                        <div class="card-body" style="margin-top: 15px">
                            <div class="card-title">
                                @item.TenSanPham
                            </div>
                            <div class="card-text" style="display: flex">
                                <p style="color: red; margin-right: 10px">@item.GiaBan</p>
                                <p style="text-decoration: line-through; opacity: 0.6; font-size: 12px">@item.Gia.ToString("N0")</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            <button style="z-index: 3" v-on:click="display1 = false, display2 = true" type="button" class="btn bg-dark-subtle"><i style="font-size: 25px" class="fa fa-chevron-right"></i></button>
        </div>
        <div class="auto_wrap" style="width: 100%" v-show="display2">
            <button style="z-index: 3; margin-right: 5px" v-on:click="display1 = true, display2 = false" type="button" class="btn bg-dark-subtle"><i style="font-size: 25px" class="fa fa-chevron-left"></i></button>
            @foreach (var item in list2)
            {
                <div style="width: 15.7%">
                    <div class="card scale_img" style="border: none">
                        <a href="/DetailProduct/Index/@item.id_sanpham"><img style="height: 200px" class="card-img-top" src="~/image/@item.Avatar" /></a>
