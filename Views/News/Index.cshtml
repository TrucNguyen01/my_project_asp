@model List<WebApplication4.Models.TinTuc>
@{
    ViewBag.Title = "Tin tức";
}

<div class="container" style="min-height: 80vh">
    <h2>Tin tức</h2>
    <hr />
    @foreach (var item in Model)
    {
        <div class="row my-4">
            <div class="col-md-4">
                <a href="/News/New_Detail/@item.id_tintuc"><img src="~/image/@item.HinhAnh" style="height: 100%; width: 90%" /></a>
            </div>
            <div class="col-md-8">
                <div class="row">
                    <div class="col-12">
                        <h2>@item.TieuDe</h2>
                    </div>
                </div>
                <div class="row my-2">
                    <div class="col-12" style="font-size: 19px">
                        @item.GioiThieu
                    </div>
                </div>
            </div>
        </div>
    }
    <div class="d-flex justify-content-center">
        @for (int i = 0; i < ViewBag.soTrang; i++)
        {
            if (ViewBag.Index == (i + 1))
            {
                <div class="mx-1 active">
                    <button class="btn bg-primary"><a class="text-white" href="/News/Index?index=@(i+1)">@(i + 1)</a></button>
                </div>
            }
            else
            {
                <div class="mx-1">
                    <button class="btn bg-primary-subtle"><a class="text-white" href="/News/Index?index=@(i+1)">@(i + 1)</a></button>
                </div>
            }
        }
    </div>
</div>
