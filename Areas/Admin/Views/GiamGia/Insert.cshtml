@model WebApplication4.Models.GiamGia
@{
    ViewBag.Title = "Insert";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<div class="container" style="margin-top: 30px;">
    @using (Html.BeginForm("Insert", "GiamGia", FormMethod.Post,
        new { enctype = "multipart/dorm-data" }))
    {
    <div class="container">
        <div class="col-lg-12" style="margin-bottom: 30px">
            @Html.LabelFor(row => row.code, "Mã giảm giá")
            @Html.TextBoxFor(row => row.code, new { @class = "form-control", placeholder = "Nhập mã giảm giá" })
        </div>
        <div class="col-lg-12" style="margin-bottom: 30px">
            @Html.LabelFor(row => row.SoTienGiam, "Số tiền giảm")
            @Html.TextBoxFor(row => row.SoTienGiam, new { @class = "form-control", placeholder = "Nhập số tiền giảm" })
        </div>
        <div class="col-lg-12" style="margin-bottom: 30px">
            @Html.LabelFor(row => row.SoLanNhap, "Số lần nhập")
            @Html.TextBoxFor(row => row.SoLanNhap, new { @class = "form-control", placeholder = "Nhập số lần nhập" })
        </div>
        <div class="col-lg-12" style="margin-bottom: 30px">
            @Html.LabelFor(row => row.NgayHetHan, "Ngày hết hạn")
            @Html.TextBoxFor(row => row.NgayHetHan, new { @class = "form-control", placeholder = "Nhập nội dung tin tức", type = "date" })
        </div>
        <div class="col-lg-12" style="margin-bottom: 30px">
            @Html.LabelFor(row => row.DonHangToiThieu, "Đơn hàng tối thiểu")
            @Html.TextBoxFor(row => row.DonHangToiThieu, new { @class = "form-control", placeholder = "Nhập đơn hàng tối thiểu" })
        </div>
        <input hidden type="text" value="@DateTime.Now.ToString("yyyy-MM-dd")" name="NgayTao" />
        <input hidden type="text" value="1" name="TrangThai" />
        <input hidden type="text" value="0" name="SoLanDaNhap" />
        <div class="col-lg-12">
            <button type="submit" style="padding: 4px 10px; border: none" class="bg-primary pull-right">Thêm mới</button>
        </div>
    </div>
    }
</div>

