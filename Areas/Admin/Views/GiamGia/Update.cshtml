@model WebApplication4.Models.GiamGia
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<div class="container" style="margin-top: 30px;">
    <form method="post" action="/Admin/GiamGia/Update/@Model.id_magiamgia">
        <div class="container">
            <input hidden name="id_magiamgia" type="text" value="@Model.id_magiamgia" />
            <div class="col-lg-12" style="margin-bottom: 30px">
                @Html.LabelFor(row => row.code, "Mã giảm giá")
                @Html.TextBoxFor(row => row.code, new { @class = "form-control", placeholder = "Nhập mã giảm giá" })
            </div>
            <div class="col-lg-12" style="margin-bottom: 30px">
                @Html.LabelFor(row => row.SoTienGiam, "Số tiền giảm giá")
                @Html.TextBoxFor(row => row.SoTienGiam, new { @class = "form-control", placeholder = "Nhập số tiền giảm giá" })
            </div>
            <div class="col-lg-12" style="margin-bottom: 30px">
                @Html.LabelFor(row => row.SoLanNhap, "Số lần được nhập")
                @Html.TextBoxFor(row => row.SoLanNhap, new { @class = "form-control", placeholder = "Nhập số lần được nhập" })
            </div>
            <div class="col-lg-12" style="margin-bottom: 30px">
                @Html.LabelFor(row => row.NgayHetHan, "Ngày hết hạn")
                @Html.TextBoxFor(row => row.NgayHetHan, new { @class = "form-control", placeholder = "Nhập ngày hết hạn", type="date"})
            </div>
            <div class="col-lg-12" style="margin-bottom: 30px">
                @Html.LabelFor(row => row.DonHangToiThieu, "Đơn hàng tối thiểu")
                @Html.TextBoxFor(row => row.DonHangToiThieu, new { @class = "form-control", placeholder = "Nhập đơn hàng tối thiểu"})
            </div>
            <div class="col-lg-12">
                <button type="submit" style="padding: 4px 10px; border: none" class="bg-primary pull-right">Cập nhật</button>
            </div>
        </div>
    </form>
</div>

