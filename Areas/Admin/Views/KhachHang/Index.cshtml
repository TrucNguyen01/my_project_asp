@model List<WebApplication4.Models.Account>
@{
    ViewBag.Title = "Khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<div class="container pt-2">
    <table class="table table-hover">
        <tr>
            <th>ID</th>
            <th>Tên khách hàng</th>
            <th>Số điện thoại</th>
            <th>Địa chỉ</th>
            <th>Ngày lập</th>
            <th>Thông tin chi tiết</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id_account</td>
                <td>@item.HoTen</td>
                <td>@item.SoDienThoai</td>
                <td>@item.DiaChi</td>
                <td>@item.NgayTao</td>
                <td>
                    <a href="/Admin/KhachHang/ThongTinChiTiet/@item.id_account" class="btn bg-primary">Xem thông tin</a>
                </td>
            </tr>
        }
        <tr>
            <th colspan="6">
                <ul class="pagination">
                    @for (int i = 0; i < ViewBag.SoTrang; i++)
                    {
                        if ((i + 1) == ViewBag.Index)
                        {
                            <li class="active mx-1">
                                <a class="btn bg-primary text-white" href="/Admin/KhachHang/Index?index=@(i + 1)">@(i + 1)</a>
                            </li>
                        }
                        else
                        {
                            <li class="mx-1">
                                <a class="btn bg-body-secondary text-white" href="/Admin/KhachHang/Index?index=@(i + 1)">@(i + 1)</a>
                            </li>
                        }
                    }
                </ul>
            </th>
        </tr>
    </table>
</div>

